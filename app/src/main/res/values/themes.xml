<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WhatToEat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/light_brown</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brown</item> <!-- List view selected text color -->
        <item name="colorSecondaryVariant">@color/green_yellow</item> <!-- List view selected background and divider color -->
        <item name="colorOnSecondary">@color/black</item> <!-- List view selected background and divider -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/light_blue</item>
        <!-- Customize your theme here. -->
        <item name="android:listChoiceBackgroundIndicator">@drawable/list_view_background_selector</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- <item name="android:windowFullscreen">true</item>  Majd Áginak ezt bekapcsolni-->

    </style>
</resources>
