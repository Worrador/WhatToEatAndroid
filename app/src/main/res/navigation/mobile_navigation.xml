<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="whattoeat.dinner.ui.breakfast.BreakfastFragment"
        android:label="@string/title_breakfast"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="whattoeat.dinner.ui.snacks.SnacksFragment"
        android:label="@string/title_snack"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_lunch"
        android:name="whattoeat.dinner.ui.snacks.SnacksFragment"
        android:label="@string/title_snack"
        tools:layout="@layout/fragment_dashboard" />
    <fragment
        android:id="@+id/navigation_notifications"
        android:name="whattoeat.dinner.ui.results.ResultsFragment"
        android:label="@string/title_results"
        tools:layout="@layout/fragment_notifications" />
</navigation>