<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Foods.SnacksFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ListView
            android:id="@+id/breakfast_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView"
            android:layout_marginBottom="0dp"
            android:divider="@color/black"
            android:dividerHeight="2dp"
            android:textSize="20sp"
            android:focusableInTouchMode="false"
            android:isScrollContainer="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="85dp"
            android:hint="@string/inputFoodName_title"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/breakfast_list_view" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textView_calories"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="85dp"
            android:layout_toEndOf="@+id/textView"
            android:hint="@string/inputFoodCalories_title"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/breakfast_list_view" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textView_proteins"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="85dp"
            android:layout_toEndOf="@+id/textView_calories"
            android:hint="@string/inputFoodProtein_title"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@+id/breakfast_list_view" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="85dp"
            android:layout_marginEnd="12dp"
            app:srcCompat="@android:drawable/ic_input_add" />

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="85dp"
            android:layout_marginEnd="12dp"
            android:backgroundTint="@color/red2"
            android:visibility="invisible"
            android:text="@string/done_button_title" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>